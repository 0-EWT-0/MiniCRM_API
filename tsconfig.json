{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",           // <--- Aquí defines tu carpeta fuente
    "outDir": "dist",           // <--- Aquí defines la salida compilada
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],           // <--- Incluye solo la carpeta src
  "exclude": ["node_modules"]
}